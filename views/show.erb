<!DOCTYPE html>
<html lang="en">
  <head>
    <title>New Article</title>
  </head>

  <body>
    <h2>Submit Article</h2>

    <%if @invalid_entry.nil?%>

    <form action="/articles/new" method="post">
      <label for="title">Title:</label>
      <input type="text" id="article" name="title" required>
      <label for="url">URL:</label>
      <input type="url" id="article" name="url" required>
      <label for="description">Description:</label>
      <input type="text" id="article" name="description" required minlength = "20">
      <input type="submit">
    </form>

    <%else%>

    <form action="/articles/new" method="post">
     <label for="title">Title:</label>
     <input type="text" id="article" name="title" value="<%=@title%>" required>
     <label for="url">URL:</label>
     <input type="url" id="article" name="url" value="<%=@url%>" required>
     <label for="description">Description:</label>
     <input type="text" id="article" name="description" value="<%=@description%>" required minlength = "20">

     <input type="submit">

     <p></p>
     <%=@invalid_entry%>
    </form>
    <%end%>
  </body>
</html>
